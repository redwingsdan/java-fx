package bridge.console;
//2-10-numbers, j-11, q-12, k-13, a-14
//heart-0, club-1, diamond-2, spade-3
public class ConsoleCard implements Comparable<Object>
{
    int suit; 
    int rank; 

    public ConsoleCard(int rank, int suit) 
    {
        this.rank = rank;
        this.suit = suit;
    }

    public int getRank() 
    {
        return rank;
    }

    public int getSuit() 
    {
        return suit;
    }
    
    public String getSuitString() 
    {
        String str = null;
        switch(suit)
        {
            case 0: 
                str = "Hearts";
                break;
            case 1: 
                str = "Clubs";
                break;
            case 2:
                str = "Diamonds";
                break;
            case 3:
                str = "Spades";
                break;
            default:
                System.out.print("Fatal error!!!");
                break;
        }
        return str;
    } 

    @Override
    public String toString() 
    {
        return rank + " of " + getSuitString() + ", ";
    }
    @Override
    public int compareTo(Object o) 
    {
        ConsoleCard c2 = (ConsoleCard) o;
        if( suit < c2.suit) 
        {
            return -1;
        }
        if( suit > c2.suit) 
        {
            return 1;
        }
        if( rank > c2.rank) 
        {
            return 1;
        }
        if( rank < c2.rank) 
        {
            return -1;
        }
        return 0;
    }

    public boolean compareTo(int firstSuit, ConsoleCard c2) 
    {
        return suit == firstSuit && rank > c2.rank;
    }
}